<div class="mb-3 rec">
                    <div class="lab">
                        <label class="form-label"> Tipo de Sangre </label>
                        <label class="form-label"> Vacunación Covid </label>
                    </div>
                    <div class="ins">
                        <select name="txtSangre" class="form-control">
                            {{#if datos.TIPO_SANGRE_SALUD}}
                                <option value="{{datos.TIPO_SANGRE_SALUD}}" class="traido" selected hidden> {{datos.TIPO_SANGRE_SALUD}} </option>
                            {{else}}
                                <option value="Nada" class="seleccione" selected hidden> Seleccione una opción </option>
                            {{/if}}  
                            <option value="A+"> A+ </option>
                            <option value="A-"> A- </option>
                            <option value="B+"> B+ </option>
                            <option value="B-"> B- </option>
                            <option value="AB+"> AB+ </option>
                            <option value="AB-"> AB- </option>
                            <option value="O+"> O+ </option>
                            <option value="O-"> O- </option>
                        </select>
                        <select name="txtCovid" class="form-control">
                            {{#if datos.VACUNACION_COVID_SALUD}}
                                <option value="{{datos.VACUNACION_COVID_SALUD}}" class="traido" selected hidden> {{datos.VACUNACION_COVID_SALUD}} </option>
                            {{else}}
                                <option value="Nada" class="seleccione" selected hidden> Seleccione una opción </option>
                            {{/if}}  
                            <option value="Si"> Si </option>
                            <option value="No"> No </option>
                        </select>
                    </div>
                </div> 
                <div class="mb-3 rec">
                    <div class="lab">
                        <label class="form-label"> Alergias </label>
                    </div>
                    <div class="ins">
                        <input type="input" class="form-control" placeholder="Sin alergias" name="txtAlergias" value="{{datos.ALERGIAS_SALUD}}">
                    </div>
                </div>
                <div class="mb-3 rec">
                    <div class="lab">
                        <label class="form-label"> Padecimientos </label>
                    </div>
                    <div class="ins">
                        <input type="input" class="form-control" placeholder="Sin padecimientos" name="txtPadecimientos" value="{{datos.PADECIMIENTOS_SALUD}}">
                    </div>
                </div>
                <div class="mb-3 rec">
                    <div class="lab">
                        <label class="form-label"> Discapacidad </label>
                    </div>
                    <div class="ins">
                        <input type="input" class="form-control" placeholder="Sin discapacidades" name="txtDiscapacidad" value="{{datos.DISCAPACIDAD_SALUD}}">
                    </div>
                </div>
                <div class="mb-3 rec">
                    <div class="lab">
                        <label class="form-label"> Antecedentes </label>
                    </div>
                    <div class="ins">
                        <input type="input" class="form-control" placeholder="Sin antecedentes" name="txtAntecedentes" value="{{datos.ANTECEDENTES_SALUD}}">
                    </div>
                </div>