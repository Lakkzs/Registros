<div class="parametros2">
    <div class="cantidad">
        <select name="Cantidad de datos" id="cantidadMostrar" name="cantidades" onchange="changeCantidad(value)">
            <option value="{{c}}" selected hidden disabled> Cantidad </option>
            <option value="20"> 20 </option>
            <option value="40"> 40 </option>
            <option value="60"> 60 </option>
            <option value="80"> 80 </option>
            <option value="100"> 100 </option>
        </select>
    </div>
    <div class="paginador">
        <div class="paginas">
                <button class="pagina" id="Inicio" onclick="changeURLNumber(0)" title="Primer página"> < </button>
                <button class="pagina" id="Primero" onclick="changeURLNumber(0)" title="Página 1"> 1 </button>
                <button class="pagina" id="Segundo" onclick="changeURLNumber(1)" title="Página 2"> 2 </button>
                <button class="pagina" id="Tercero" onclick="changeURLNumber(2)" title="Página 3"> 3 </button>
                <button class="pagina" id="Cuarto" onclick="changeURLNumber({{Cuarto}}-1)" title="Página 4"> {{Cuarto}} </button>
                <button class="pagina" id="Quinto" onclick="changeURLNumber({{Quinto}}-1)" title="Página 5"> {{Quinto}} </button>
                <button class="pagina" id="Sexto" onclick="changeURLNumber({{Sexto}}-1)" title="Página 6"> {{Sexto}} </button>
            {{#each paginas}}
                <button class="pagina" id="Ultimo" onclick="changeURLNumber({{Paginas}}-1)" title="Última página"> > </button>
            {{/each}}
        </div>
    </div>
</div>

<style>
    .parametros2{
    display: flex;
    padding-top: 1%;
    gap: 1%;
    width: 90%;
    justify-content: flex-end;
    }
    .cantidad{
        width: 10%;
    }
    #cantidadMostrar{
        width: 100%;
        height: 44px;
    }
    .paginador{
        width: 35%;
    }
    .paginas{
        width: 117%;
    }
    .pagina{
        width: 10%;
        height: 44px;
        background-color: white;
        margin-left: 1px;
        border: 1px solid black;
    }
    .pagina:hover{
        background-color: rgb(235, 235, 235);
    }
</style>